<div class="modal-dialog container">
	<div class="modal-content">
		<div>
			<div class="modal-header" style="color: #5cb85c">
				<h2>
					<strong>Sign In</strong>
				</h2>
			</div>
			<div class="modal-body">
				<form action="#" class="col-sm-12 center-block">
					<div class="input-group" style="margin-bottom: 25px;">
						<span class="input-group-addon iga2"><i
							class="fa fa-fw fa-envelope"></i></span> <input type="text"
							class="form-control input-lg" placeholder="enter your email">
					</div>
					<div class="input-group" style="margin-bottom: 25px;">
						<span class="input-group-addon iga2"><i
							class="fa fa-fw fa-lock"></i></span> <input type="password"
							class="form-control input-lg" placeholder="password">
					</div>
					<div class="input-group">
						<div class="checkbox">
							<label> <input id="login-remember" type="checkbox"
								name="remember" value="1"> Remember me
							</label>
						</div>
					</div>
					<div style="margin-top: 20px" class="form-group">
						<div class="col-sm-12 controls">
							<a id="btn-login" href="#" class="btn btn-success">Sign In </a>
						</div>
						<div
							style="float: right; font-size: 80%; position: relative; top: -10px">
							<a href="#">Forgot password?</a>
						</div>
					</div>
					<div class="form-group text-center">
						<div class="col-sm-12 control">
							<div
								style="border-top: 1px solid #888; padding-top: 15px; font-size: 85%">
								New to OneCryptor?</div>
							<div class="form-group">
								<div class="col-sm-12 controls" style="margin-top: 10px;">
									<a id="login-register"
										href="${pageContext.request.contextPath}/register"
										class="btn btn-secondary">Create Your OneCryptor Account </a>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
